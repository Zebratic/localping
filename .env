# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=localping

# Web Server Configuration (Single unified server on port 8000)
API_PORT=8000
API_HOST=localhost
ADMIN_PORT=8000
ADMIN_HOST=localhost
PUBLIC_PORT=8000
PUBLIC_HOST=localhost

# Electron GUI Configuration
GUI_PORT=8000

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_METHOD=dbus

# Ping Intervals (in seconds)
PING_INTERVAL=60
SLOW_PING_INTERVAL=300

# Alert Settings
ALERT_THRESHOLD=3
ALERT_COOLDOWN=300

# API Keys (for future authentication)
ADMIN_API_KEY=localping-admin-key-12345

# Environment
NODE_ENV=development
