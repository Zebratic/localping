# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=localping

# API Server Configuration
API_PORT=3000
API_HOST=localhost

# Web Admin Panel Configuration
ADMIN_PORT=3001
ADMIN_HOST=localhost

# Public Status Page Configuration
PUBLIC_PORT=3002
PUBLIC_HOST=localhost

# Electron GUI Configuration
GUI_PORT=3003

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_METHOD=dbus

# Ping Intervals (in seconds)
PING_INTERVAL=60
SLOW_PING_INTERVAL=300

# Alert Settings
ALERT_THRESHOLD=3
ALERT_COOLDOWN=300

# API Keys (for future authentication)
ADMIN_API_KEY=your_secret_api_key_here

# Environment
NODE_ENV=development
