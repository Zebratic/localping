{
  "name": "localping",
  "version": "0.1.0",
  "description": "A local system uptime monitor - Quick-fix your homelab remotely",
  "main": "src/app.js",
  "bin": {
    "localping": "./bin/localping"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "cli": "node src/cli/localping.js",
    "gui": "electron src/electron/main.js",
    "web": "node src/app.js --mode web",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "uptime",
    "monitoring",
    "homelab",
    "ping",
    "dashboard"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "default-gateway": "^7.2.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "express-session": "^1.17.3",
    "express-ws": "^5.0.2",
    "inquirer": "^13.0.1",
    "isomorphic-form-data": "^2.0.0",
    "mongodb": "^7.0.0",
    "nodemon": "^3.1.11",
    "pm2": "^6.0.13",
    "shell-escape": "^0.2.0",
    "tcp-ping": "^0.1.1",
    "uuid": "^13.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "jest": "^29.7.0"
  }
