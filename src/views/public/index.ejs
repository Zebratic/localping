  <script src="/js/public.js"></script>
  <script>
    // Update notification toggle button state
    function updateNotificationToggle() {
      const toggle = document.getElementById('notification-toggle');
      const icon = document.getElementById('notification-icon');
      const text = document.getElementById('notification-text');
      
      if (!toggle || !window.notificationManager) return;
      
      const isEnabled = window.notificationManager.isEnabled();
      const permission = window.notificationManager.notificationPermission;
      
      if (permission === 'granted' && isEnabled) {
        toggle.classList.remove('bg-slate-700', 'hover:bg-slate-600');
        toggle.classList.add('bg-cyan-600', 'hover:bg-cyan-700');
        icon.classList.remove('fa-bell');
        icon.classList.add('fa-bell-slash');
        text.textContent = 'Disable Notifications';
      } else if (permission === 'denied') {
        toggle.classList.remove('bg-slate-700', 'hover:bg-slate-600', 'bg-cyan-600', 'hover:bg-cyan-700');
        toggle.classList.add('bg-red-700', 'hover:bg-red-800');
        toggle.disabled = true;
        icon.classList.remove('fa-bell-slash');
        icon.classList.add('fa-bell-slash');
        text.textContent = 'Notifications Blocked';
      } else {
        toggle.classList.remove('bg-cyan-600', 'hover:bg-cyan-700', 'bg-red-700', 'hover:bg-red-800');
        toggle.classList.add('bg-slate-700', 'hover:bg-slate-600');
        toggle.disabled = false;
        icon.classList.remove('fa-bell-slash');
        icon.classList.add('fa-bell');
        text.textContent = 'Enable Notifications';
      }
    }

    async function toggleBrowserNotifications() {
      if (!window.notificationManager) return;
      
      const currentState = window.notificationManager.isEnabled();
      const newState = !currentState;
      
      await window.notificationManager.toggleNotifications(newState);
      updateNotificationToggle();
      
      if (newState && window.notificationManager.notificationPermission === 'granted') {
        // Show a test notification
        window.notificationManager.showToastNotification('✓ Browser notifications enabled', 'success');
      }
    }

    // Update toggle on page load
    window.addEventListener('load', () => {
      setTimeout(updateNotificationToggle, 100);
    });
  </script>
