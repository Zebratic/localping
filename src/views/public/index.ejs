<body>
  <div class="min-h-screen flex flex-col">
  <!-- Header - Mobile Optimized -->
  <header class="border-b border-slate-700/30 sticky top-0 z-40 bg-gradient-to-b from-slate-900/95 to-slate-900/90 backdrop-blur-sm">
    <div class="max-w-6xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
          </svg>
          <h1 class="text-xl font-bold text-white"><%= typeof title !== 'undefined' ? title : 'Homelab' %></h1>
        </div>
        <div id="status-box" class="text-right">
          <p id="status-text" class="text-sm font-semibold text-green-400">✓ Operational</p>
          <p id="status-time" class="text-slate-400 text-xs">-</p>
        </div>
      </div>

      <!-- Navigation Tabs -->
      <div class="nav-tabs">
        <button onclick="switchPage('home')" class="nav-tab active" id="tab-home">
          <i class="fas fa-th-large mr-1.5"></i>Apps
        </button>
        <button onclick="switchPage('status')" class="nav-tab" id="tab-status">
          <i class="fas fa-chart-line mr-1.5"></i>Uptime
        </button>
        <button onclick="switchPage('blog')" class="nav-tab" id="tab-blog">
          <i class="fas fa-blog mr-1.5"></i>Blog
        </button>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 pb-20">
    <div class="max-w-6xl mx-auto px-4 py-4 w-full">
        <!-- Home Page (Apps) -->
        <div id="page-home" class="page active">
          <!-- Ongoing Incidents Section - Mobile First -->
          <div id="home-incidents" class="mobile-section"></div>

          <!-- Apps Section -->
          <div class="mobile-section">
            <div class="mb-4">
              <h2 class="text-lg font-bold text-white mb-1">Apps</h2>
              <p id="app-count" class="text-slate-400 text-xs">Loading...</p>
            </div>

            <!-- Apps Grid -->
            <div id="apps-grid" class="flex flex-col gap-3 sm:grid sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
              <div class="text-center text-slate-400 py-12 text-sm">Loading apps...</div>
            </div>
          </div>
        </div>

        <!-- Status Page -->
        <div id="page-status" class="page">
          <!-- Overall Status Box -->
          <div class="overall-status-box mb-6">
            <div id="status-indicator" class="status-indicator operational"></div>
            <div id="overall-status-message" class="text-sm text-slate-300">
              All systems are operational. No incidents reported.
            </div>
          </div>

          <!-- Active Incidents Container -->
          <div id="incidents-container" class="hidden mb-6"></div>

          <div class="mb-6">
            <h2 class="text-xl sm:text-2xl font-bold text-white mb-2">Services Status</h2>
            <span id="service-count" class="text-slate-400 text-sm">Loading...</span>
          </div>

          <!-- Services List -->
          <div class="mb-6">
            <div id="services-list">
              <div class="text-center text-slate-400 py-8">Loading services...</div>
            </div>
          </div>

          <!-- Incident History -->
          <div class="mb-6">
            <h2 class="text-xl sm:text-2xl font-bold text-white mb-2">Incident History</h2>
            <p class="text-slate-400 text-sm mb-4">View all reported incidents and their status</p>
          </div>

          <div class="bg-slate-900/50 backdrop-blur rounded-lg border border-slate-700/30 p-4 sm:p-6">
            <div id="incident-history">
              <div class="text-center text-slate-400 py-8">Loading incident history...</div>
            </div>
          </div>
        </div>

        <!-- Blog Page -->
        <div id="page-blog" class="page">
          <div class="mb-6">
            <h2 class="text-xl sm:text-2xl font-bold text-white mb-2">Homelab Updates & Changelog</h2>
            <p class="text-slate-400 text-sm">Latest updates and changes to the homelab infrastructure</p>
          </div>

          <div id="blog-posts" class="space-y-6">
            <div class="text-center text-slate-400 py-8">Loading posts...</div>
          </div>
        </div>
        <!-- Notification Toggle - Mobile Floating Button -->
        <div class="fixed bottom-4 right-4 z-50 flex items-end justify-end pointer-events-none">
          <button
            id="notification-toggle"
            onclick="toggleBrowserNotifications()"
            class="pointer-events-auto flex items-center justify-center gap-2 px-4 py-3 rounded-full shadow-xl bg-slate-700 text-white text-sm font-medium transition-all ring-1 ring-slate-800/70 backdrop-blur-sm min-w-[48px] min-h-[48px] active:scale-95"
            style="backdrop-filter: blur(8px);"
          >
            <i class="fas fa-bell" id="notification-icon" aria-hidden="true"></i>
            <span id="notification-text" class="hidden sm:inline">Notifications</span>
            <span class="sr-only">Toggle Notifications</span>
          </button>
        </div>
      </div>
    </main>

    <!-- Footer - Mobile Optimized -->
    <footer class="border-t border-slate-700/30 mt-6">
      <div class="max-w-6xl mx-auto px-4 py-3 text-center text-slate-500 text-xs">
        <p class="mb-1">LocalPing - System Monitoring</p>
        <div class="flex items-center justify-center gap-2 flex-wrap">
          <a href="https://github.com/zebratic/localping" target="_blank" rel="noopener noreferrer" class="text-cyan-400 hover:text-cyan-300">
            <i class="fab fa-github"></i> GitHub
          </a>
          <span class="text-slate-600">•</span>
          <a href="/admin/login" class="text-slate-500 hover:text-slate-400">Admin</a>
        </div>
      </div>
    </footer>
  </div>

