<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LocalPing Setup</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      min-height: 100vh;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }
    .form-input {
      background-color: #0f1419;
      border-color: #2a2a4e;
    }
    .form-input:focus {
      border-color: #4f46e5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }
    .btn-primary {
      background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
    }
    .btn-primary:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body>
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-white mb-2">LocalPing</h1>
        <p class="text-gray-400">Initial Setup Wizard</p>
      </div>

      <!-- Setup Card -->
      <div class="bg-[#0f1419] border border-[#2a2a4e] rounded-lg p-8">
        <% if (error) { %>
          <div class="mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-lg">
            <p class="text-red-400 text-sm"><strong>Error:</strong> <%= error %></p>
          </div>
        <% } %>

        <form method="POST" class="space-y-6">
          <!-- Step 1: Admin Credentials -->
          <div>
            <h2 class="text-lg font-semibold text-white mb-4">Admin Credentials</h2>

            <div class="mb-4">
              <label for="adminUsername" class="block text-sm font-medium text-gray-300 mb-2">
                Admin Username
              </label>
              <input
                type="text"
                id="adminUsername"
                name="adminUsername"
                value="<%= formData?.adminUsername || 'admin' %>"
                class="form-input w-full px-4 py-2 border rounded-lg text-white placeholder-gray-500"
                required
              />
              <p class="text-gray-400 text-xs mt-1">Used to log in to the admin panel</p>
            </div>

            <div class="mb-4">
              <label for="adminPassword" class="block text-sm font-medium text-gray-300 mb-2">
                Password
              </label>
              <input
                type="password"
                id="adminPassword"
                name="adminPassword"
                class="form-input w-full px-4 py-2 border rounded-lg text-white placeholder-gray-500"
                placeholder="At least 6 characters"
                required
              />
            </div>

            <div class="mb-4">
              <label for="passwordConfirm" class="block text-sm font-medium text-gray-300 mb-2">
                Confirm Password
              </label>
              <input
                type="password"
                id="passwordConfirm"
                name="passwordConfirm"
                class="form-input w-full px-4 py-2 border rounded-lg text-white placeholder-gray-500"
                placeholder="Re-enter your password"
                required
              />
            </div>
          </div>

          <!-- Step 2: Network Configuration -->
          <div class="pt-4 border-t border-[#2a2a4e]">
            <h2 class="text-lg font-semibold text-white mb-4">Network Configuration</h2>

            <div>
              <label for="gatewayIp" class="block text-sm font-medium text-gray-300 mb-2">
                Gateway IP Address
              </label>
              <input
                type="text"
                id="gatewayIp"
                name="gatewayIp"
                value="<%= formData?.gatewayIp || detectedGateway %>"
                class="form-input w-full px-4 py-2 border rounded-lg text-white placeholder-gray-500"
                placeholder="e.g., 192.168.1.1"
                required
              />
              <p class="text-gray-400 text-xs mt-1">
                <% if (detectedGateway) { %>
                  ✓ Auto-detected: <%= detectedGateway %> (you can change this)
                <% } else { %>
                  Enter your network gateway IP address
                <% } %>
              </p>
            </div>
          </div>

          <!-- Info -->
          <div class="pt-4 border-t border-[#2a2a4e]">
            <p class="text-gray-400 text-sm mb-2">
              <strong>Default monitors will be created for:</strong>
            </p>
            <ul class="text-gray-400 text-sm space-y-1 ml-4">
              <li>✓ Gateway monitoring (ICMP ping)</li>
              <li>✓ Cloudflare DNS at 1.1.1.1 (ICMP ping)</li>
            </ul>
          </div>

          <!-- Submit -->
          <div class="pt-4">
            <button
              type="submit"
              class="btn-primary w-full py-3 rounded-lg font-semibold text-white transition"
            >
              Complete Setup
            </button>
          </div>

          <p class="text-center text-gray-400 text-xs mt-4">
            By completing setup, you agree that LocalPing will monitor your network
          </p>
        </form>
      </div>

      <!-- Footer -->
      <p class="text-center text-gray-500 text-xs mt-8">
        LocalPing • Homelab Dashboard & System Monitor
      </p>
    </div>
  </div>

  <script>
    // Form validation on client side
    document.querySelector('form').addEventListener('submit', function(e) {
      const password = document.getElementById('adminPassword').value;
      const passwordConfirm = document.getElementById('passwordConfirm').value;
      const gateway = document.getElementById('gatewayIp').value;

      if (password.length < 6) {
        e.preventDefault();
        alert('Password must be at least 6 characters');
        return;
      }

      if (password !== passwordConfirm) {
        e.preventDefault();
        alert('Passwords do not match');
        return;
      }

      const ipRegex = /^(\d{1,3}\.){3}\d{1,3}$/;
      if (!ipRegex.test(gateway)) {
        e.preventDefault();
        alert('Invalid IP address format');
        return;
      }
    });
  </script>
</body>
</html>
